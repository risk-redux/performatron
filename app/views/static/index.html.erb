<%- view_title "Welcome!" %>

<% content_for :main do %>
<div class="row">
  <div class="col-12">
    <%= form_tag(root_path, :method => 'get', :id => "big-search") do %>
    <div class="big-search">
      <span class="fa fa-search"></span>
      <%= text_field_tag(:search, params[:search], :id => "big-search-field", :autocomplete => "off", :maxlength => 35, :placeholder => "Search for work roles (e.g., 'Knowledge Manager')...") %>
    </div>
    <br /><%= submit_tag("Search", :name => nil) %>
    <% end %>
  </div>
  <div id="big-search-results" class="col-12">
    <%= render "static/shared/big_search_results" %>
  </div>
</div>
<% end %>

