<%- view_title "Welcome!" %>

<% content_for :main do %>
<div class="row">
  <div class="col-12">
    <%= form_tag(root_path, :method => 'get', :id => "big-search", "data-controller" => "static") do %>
    <div class="big-search">
      <span class="fa fa-search"></span>
      <%= text_field_tag(:search, params[:search], :id => "big-search-field", :autocomplete => "off", :maxlength => 35, :autofocus => "true", :placeholder => "Search for work roles (e.g., '#{ @placeholder }')...") %>
    </div>
    <br /><%= submit_tag("Search", :name => nil) %>
    <% end %>
  </div>
  
  <div id="big-search-results" class="col-12">
    
  </div>

  <turbo-stream action="update" target="big-search-results">
    <template>
    <%= render "static/shared/big_search_results" %>
    </template>
  </turbo-stream>
</div>
<% end %>

