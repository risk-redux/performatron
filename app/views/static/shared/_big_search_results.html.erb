<% unless @search.nil? %>
  <% if (@hits['work_roles'].nil? || @hits['work_roles'].length == 0) &&
    (@hits['knowledges'].nil? || @hits['knowledges'].length == 0) &&
    (@hits['skills'].nil? || @hits['skills'].length == 0) &&
    (@hits['tasks'].nil? || @hits['tasks'].length == 0) &&
    @search.to_s != '' %>
  <h2 class='text-center'>No matches found.</h2>
  <% else %>
  <ul class='list-unstyled'>
    <% @hits['work_roles'].each { |hit| %>
      <li>
        <%= link_to(nice_work_role_path(hit.work_role_code)) do %>
        <h2><span class="fixed-width"><%= hit.work_role_code %></span> <small><%= hit.name %></small></h2>
        <% end %>
        <p class="text-muted small"><em><%= hit.description %></em></p>
      </li>
    <% } unless @hits['work_roles'].nil? %>

    <% @hits['knowledges'].each { |hit| %>
      <li>
        <%= link_to(nice_knowledge_path(hit.knowledge_code)) do %>
        <h2><small class="fixed-width"><em><%= hit.knowledge_code %></em></small></h2>
        <% end %>
        <p class="text-muted small"><em><%= hit.description%></em></p>
      </li>
    <% } unless @hits['knowledges'].nil? %>

    <% @hits['skills'].each { |hit| %>
      <li>
        <%= link_to(nice_skill_path(hit.skill_code)) do %>
        <h2><small class="fixed-width"><em><%= hit.skill_code %></em></small></h2>
        <% end %>
        <p class="text-muted small"><em><%= hit.description%></em></p>
      </li>
    <% } unless @hits['skills'].nil? %>

    <% @hits['tasks'].each { |hit| %>
    <li>
      <%= link_to(nice_task_path(hit.task_code)) do %>
      <h2><small class="fixed-width"><em><%= hit.task_code %></em></small></h2>
      <% end %>
      <p class="text-muted small"><em><%= hit.description%></em></p>
    </li>
  <% } unless @hits['tasks'].nil? %>

  </ul>
  <% end %>
<% end %>