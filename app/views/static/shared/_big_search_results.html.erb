<% unless @search.nil? %>
  <% if (@hits['work_roles'].nil? || @hits['work_roles'].length == 0) &&
    (@hits['knowledges'].nil? || @hits['knowledges'].length == 0) &&
    (@hits['skills'].nil? || @hits['skills'].length == 0) &&
    (@hits['abilities'].nil? || @hits['abilities'].length == 0) &&
    (@hits['tasks'].nil? || @hits['tasks'].length == 0) &&
    @search.to_s != '' %>
  <h2 class='text-center'>No matches found.</h2>
  <% else %>
  <ul class='list-unstyled'>
    <% @hits['work_roles'].each { |hit| %>
      <%= link_to(nice_work_role_path(hit.acronym)) do %>
        <li>
          <h2><%= hit.acronym %> <small><%= hit.name %></small></h2>
          <p class="text-muted small"><em><%= hit.description %></em></p>
        </li>
      <% end %>
    <% } unless @hits['work_roles'].nil? %>

    <% @hits['knowledges'].each { |hit| %>
      <%= link_to(nice_knowledge_path(hit.acronym)) do %>
        <li>
          <h2><small><em><%= hit.acronym %></em></small></h2>
          <p class="text-muted small"><em><%= hit.description%></em></p>
        </li>
      <% end %>
    <% } unless @hits['knowledges'].nil? %>

    <% @hits['skills'].each { |hit| %>
      <%= link_to(nice_skill_path(hit.acronym)) do %>
        <li>
          <h2><small><em><%= hit.acronym %></em></small></h2>
          <p class="text-muted small"><em><%= hit.description%></em></p>
        </li>
      <% end %>
    <% } unless @hits['skills'].nil? %>
    
    <% @hits['abilities'].each { |hit| %>
      <%= link_to(nice_ability_path(hit.acronym)) do %>
        <li>
          <h2><small><em><%= hit.acronym %></em></small></h2>
          <p class="text-muted small"><em><%= hit.description%></em></p>
        </li>
      <% end %>
    <% } unless @hits['abilities'].nil? %>

    <% @hits['tasks'].each { |hit| %>
    <%= link_to(nice_task_path(hit.acronym)) do %>
      <li>
        <h2><small><em><%= hit.acronym %></em></small></h2>
        <p class="text-muted small"><em><%= hit.description%></em></p>
      </li>
    <% end %>
  <% } unless @hits['tasks'].nil? %>

  </ul>
  <% end %>
<% end %>