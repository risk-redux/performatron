<% unless skills.nil? %>
<table id="nice_skills_table" class="table table-hover table-sm collapse show">
  <thead>
    <tr>
      <th scope="col">Code</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    <% skills.each do |skill| %>
    <tr data-link="<%= nice_skill_path(skill.acronym) %>">
      <th scope="row"><%= skill.acronym %></th>
      <td><%= skill.description %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<table id="nice_skills_table" class="table table-hover table-sm collapse show">
  <thead>
    <tr>
      <th scope="col">Code</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row" colspan="2">Nothing here!</th>
    </tr>
  </tbody>
</table>
<% end %>