<% unless abilities.nil? %>
<table id="nice_abilities_table" class="table table-hover table-sm collapse show">
  <thead>
    <tr>
      <th scope="col">Code</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    <% abilities.each do |ability| %>
    <tr data-link="<%= nice_ability_path(ability.acronym) %>">
      <th scope="row"><%= ability.acronym %></th>
      <td><%= ability.description %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<table id="nice_abilities_table" class="table table-hover table-sm collapse show">
  <thead>
    <tr>
      <th scope="col">Code</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row" colspan="2">Nothing here!</th>
    </tr>
  </tbody>
</table>
<% end %>