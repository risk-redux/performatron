<% unless tasks.nil? %>
<table id="nice_tasks_table" class="table table-hover table-sm collapse show">
  <thead>
    <tr>
      <th scope="col">Code</th>
      <th scope="col">Description</th>
      <th scope="col" nowrap>Work Roles</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
    <tr data-link="<%= nice_task_path(task.acronym) %>">
      <th scope="row">
        <%= link_to nice_task_path(task.acronym) do %>
        <%= task.acronym %>
        <% end %>
      </th>
      <td><%= task.description %></td>
      <td><%= task.nice_work_roles.count %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<table id="nice_tasks_table" class="table table-hover table-sm collapse show">
  <thead>
    <tr>
      <th scope="col">Code</th>
      <th scope="col">Description</th>
      <th scope="col" nowrap>Work Roles</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row" colspan="2">Nothing here!</th>
    </tr>
  </tbody>
</table>
<% end %>